<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DetailActivity">

    <include
        android:id="@+id/toolbar_main"
        layout="@layout/tool_bar" />

    <ImageView
        android:id="@+id/capturedImage"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/capturedimage"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_main"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/DiseaseOne"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/capturedImage" />

    <TextView
        android:id="@+id/DiseaseTwo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/DiseaseOne"
        app:layout_constraintStart_toStartOf="@+id/DiseaseOne"
        app:layout_constraintTop_toBottomOf="@+id/DiseaseOne" />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>